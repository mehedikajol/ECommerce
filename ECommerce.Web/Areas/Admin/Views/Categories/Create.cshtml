@model CategoryCreateModel;

<section class="container">
    <div class="py-5 bg-light">
        <div class="container">
            <div class="row px-4 px-lg-5 py-lg-4 align-items-center">
                <div class="col-lg-6">
                    <h1 class="h2 text-uppercase mb-0">Create Category</h1>
                </div>
                <div class="col-lg-6 text-lg-end">
                    <nav aria-label="breadcrumb">
                        <ol class="breadcrumb justify-content-lg-end mb-0 px-0 bg-light">
                            <li class="breadcrumb-item">
                                <a class="text-dark" href="/">Home</a>
                            </li>
                            <li class="breadcrumb-item active" aria-current="page">Create Category</li>
                        </ol>
                    </nav>
                </div>
            </div>
        </div>
    </div>

    <div class="py-5">
        <div class="row">
            <!-- left column -->
            <div class="col-12">
                <!-- general form elements -->
                <div class="card card-primary">
                    <div class="card-header">
                        <h3 class="card-title">Create form</h3>
                    </div>
                    <!-- /.card-header -->
                    <!-- form start -->
                    <form method="post" asp-controller="Categories" asp-action="Create" asp-antiforgery="true">
                        @*<div asp-validation-summary="All" class="text-danger"></div>*@
                        <div class="card-body">
                            <div class="form-group mb-2">
                                <label asp-for="Name"></label>
                                <input asp-for="Name" class="form-control" placeholder="Enter category title" />
                                <span asp-validation-for="Name" class="text-danger"></span>
                            </div>
                            <div class="form-group mb-2">
                                <label asp-for="Description"></label>
                                <input asp-for="Description" class="form-control" placeholder="Enter category description" />
                                <span asp-validation-for="Description" class="text-danger"></span>
                            </div>

                            <div class="form-group mb-2">
                                <label asp-for="MainCategoryId">Main Category</label>
                                <select asp-for="MainCategoryId" class="form-control select2" asp-items="Html.GetEnumSelectList<MainCategory>()">
                                    <option value="">--Select Main Category--</option>
                                </select>
                                <span asp-validation-for="MainCategoryId" class="text-danger"></span>
                            </div>
                        </div>
                        <!-- /.card-body -->

                        <div class="card-footer">
                            <button type="submit" class="btn btn-primary">Create</button>
                            <a asp-area="Admin" asp-controller="Categories" asp-action="Index" class="btn btn-default">Cancel</a>
                        </div>
                    </form>
                </div>
                <!-- /.card -->
            </div>
        </div>
    </div>
</section>