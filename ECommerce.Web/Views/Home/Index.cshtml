                                    </li>
                                </ul>
                            </div>
                        </div>
                        <div class="product-content">
                            <h4>
                                <a asp-controller="Products" asp-action="ViewProduct" asp-route-id="@product.Id">@product.Name</a>
                            </h4>
                            <p class="price">$@product.Price</p>
                        </div>
                        
                    </div>
                </div>
            }
        </div>
        <div class="row">
            <partial name="Partials/_AvitoProductModal" />
        </div>
    </div>
</section>

