@model ForgetPasswordModel
@{
    Layout = "_AuthLayout";
    ViewData["Title"] = "Sign In";
}

<div class="container-fluid" style="margin-top: 120px;">
    <div class="rounded d-flex justify-content-center">
        <div class="col-lg-4 col-md-6 col-sm-12 shadow-lg p-5 pb-4 bg-light">
            <div class="text-center">
                <h3 class="text-primary">Check your inbox</h3>
            </div>

            <p>If you provide correct email address, an email will be sent to your mail box.</p>

            <p class="text-center mt-5">
                <a asp-action="SignIn" asp-controller="Account" class="text-primary text-center">Return to SignIn Page</a>
            </p>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}