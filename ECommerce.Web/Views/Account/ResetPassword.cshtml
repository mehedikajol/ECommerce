@model ResetPasswordModel
@{
    Layout = "_AuthLayout";
    ViewData["Title"] = "Reset Password";
}

<div class="container-fluid" style="margin-top: 120px;">
    <div class="rounded d-flex justify-content-center">
        <div class="col-lg-4 col-md-6 col-sm-12 shadow-lg p-5 pb-4 bg-light">
            <div class="text-center">
                <h3 class="text-primary">Sign In</h3>
            </div>
            <form class="form-horizontal" method="post" asp-controller="Account" asp-action="ResetPassword" asp-antiforgery="true">
                <input type="hidden" asp-for="Code" />
                <div class="p-4">
                    <div class="mb-3">
                        <div class="input-group">
                            <span class="input-group-text bg-primary">
                                <i class="fas fa-envelope"></i>
                            </span>
                            <input asp-for="EmailAddress" class="form-control" placeholder="Enter email">
                        </div>
                        <span asp-validation-for="EmailAddress" class="text-danger"></span>
                    </div>
                    <div class="mb-3">
                        <div class="input-group">
                            <span class="input-group-text bg-primary">
                                <i class="fas fa-key"></i>
                            </span>
                            <input asp-for="Password" class="form-control" placeholder="Enter password">
                        </div>
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>
                    <div class="mb-3">
                        <div class="input-group">
                            <span class="input-group-text bg-primary">
                                <i class="fas fa-key"></i>
                            </span>
                            <input asp-for="ConfirmPassword" class="form-control" placeholder="Enter password">
                        </div>
                        <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                    </div>

                    <button class="btn btn-primary text-center" type="submit">
                        Reset Password
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}