@{
    Layout = "_AuthLayout";
    ViewData["Title"] = "Reset Password";
}

<div class="container-fluid" style="margin-top: 120px;">
    <div class="rounded d-flex justify-content-center">
        <div class="col-lg-4 col-md-6 col-sm-12 shadow-lg p-5 pb-4 bg-light">
            <div class="text-center">
                <h3 class="text-primary">Password Reset</h3>
            </div>

            <p class="text-center">Your password has been reset, please login.</p>

            <p class="text-center mt-5">
                <a asp-action="SignIn" asp-controller="Account" class="text-primary text-center">Go to SignIn Page</a>
            </p>
        </div>
    </div>
</div>