@model ForgetPasswordModel
@{
    Layout = "_AuthLayout";
    ViewData["Title"] = "Forget Password";
}

<div class="container-fluid" style="margin-top: 120px;">
    <div class="rounded d-flex justify-content-center">
        <div class="col-lg-4 col-md-6 col-sm-12 shadow-lg p-5 pb-4 bg-light">
            <div class="text-center">
                <h3 class="text-primary">Forget Password</h3>
            </div>
            <form class="form-horizontal" method="post" asp-controller="Account" asp-action="ForgetPassword" asp-antiforgery="true">
                <div class="p-4">
                    <div class="mb-3">
                        <div class="input-group">
                            <span class="input-group-text bg-primary">
                                <i class="fas fa-envelope"></i>
                            </span>
                            <input asp-for="Email" class="form-control" placeholder="Enter email">
                        </div>
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>
                    <div class="text-center">
                        <button class="btn btn-primary text-center" type="submit">
                            Send Link
                        </button>
                    </div>
                    
                    <p class="text-center mt-5">
                        <a asp-action="SignIn" asp-controller="Account" class="text-primary text-center">Return to SignIn Page</a>
                    </p>
                    
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}